<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative_Layout"
    android:background="@android:color/white">


    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Jhon Doe"
        android:id="@+id/txt_device_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_marginTop="4dp"
        android:id="@+id/txt_date_time"
        android:layout_marginRight="16dp"
        android:text="Monday 28 october 2015"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_device_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_marginLeft="16dp"
        android:layout_width="60dp"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Device id: 2"
        android:id="@+id/txt_device_id"
        android:layout_alignBottom="@+id/txt_date_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:layout_below="@+id/txt_date_time"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="32dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#339595"/>

    <ImageView
        android:layout_width="20dp"
        android:scaleType="fitXY"
        android:layout_height="wrap_content"
        android:id="@+id/img_decoration"
        android:src="@drawable/cell_phone"
        android:layout_toRightOf="@+id/txt_device_id"
        android:layout_alignBottom="@+id/txt_device_id"
        android:layout_alignTop="@+id/txt_date_time" />


</RelativeLayout>