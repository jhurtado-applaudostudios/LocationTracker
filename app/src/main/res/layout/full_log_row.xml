<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/log_relative_layout"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#B7B7B6"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:text="Medium Text"
        android:id="@+id/txt_time"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:layout_marginRight="4dp"
        android:gravity="right"
        android:id="@+id/txt_phone_log"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/txt_time"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/txt_static_phone_log"
        android:layout_toEndOf="@+id/txt_static_phone_log" />

    <View
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/separator"
        android:background="#757575"
        android:layout_below="@id/txt_phone_log" />

    <TextView
        android:layout_marginTop="4dp"
        android:textColor="#000000"
        android:layout_marginLeft="4dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txt_location"
        android:layout_marginRight="4dp"
        android:layout_below="@+id/separator"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/txt_static_location"
        android:layout_toEndOf="@+id/txt_static_location" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Phone log :"
        android:textColor="#000000"
        android:id="@+id/txt_static_phone_log"
        android:layout_alignTop="@+id/txt_phone_log"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location :"
        android:layout_marginLeft="4dp"
        android:textColor="#000000"
        android:id="@+id/txt_static_location"
        android:layout_alignTop="@+id/txt_location"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>