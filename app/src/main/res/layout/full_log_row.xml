<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="16dp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/log_relative_layout"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date: "
        android:id="@+id/txt_date" />

    <View
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#B7B7B2"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_marginLeft="4dp"
        android:layout_below="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Type: "
        android:id="@+id/txt_type"
        android:layout_alignBottom="@+id/txt_duration"
        android:layout_alignLeft="@+id/txt_duration"
        android:layout_alignStart="@+id/txt_duration"
        android:layout_alignTop="@+id/txt_duration" />

    <View
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#B7B7B2"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_marginLeft="4dp"
        android:layout_below="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name: "
        android:id="@+id/txt_caller"
        android:layout_alignBottom="@+id/txt_duration"
        android:layout_alignLeft="@+id/txt_duration"
        android:layout_alignStart="@+id/txt_duration"
        android:layout_alignTop="@+id/txt_duration" />

    <View
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#B7B7B2"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_marginLeft="4dp"
        android:layout_below="@+id/txt_caller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Duration: "
        android:id="@+id/txt_duration"
        android:layout_alignTop="@+id/txt_phone_number"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#B7B7B2"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_marginLeft="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Phone number: "
        android:id="@+id/txt_phone_number"
        android:layout_below="@+id/txt_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#B7B7B2"
        android:layout_marginLeft="20dp"/>

</LinearLayout>